# Database
POSTGRES_USER=dynasty_user
POSTGRES_PASSWORD=dynasty_pass
POSTGRES_DB=dynasty_tracker
POSTGRES_PORT=5432

# Backend
NODE_ENV=development
BACKEND_PORT=3001
JWT_SECRET=your-secret-key-change-in-production
SESSION_SECRET=your-session-secret-change-in-production

# Frontend
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:3001

# AWS (for Textract OCR)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# AI Configuration
# Provider: 'ollama' (self-hosted, no internet) or 'openai' (cloud, requires API key)
AI_PROVIDER=ollama
USE_AI_OCR=true

# Ollama (Self-Hosted LLM) - No internet required, no API costs
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_CHAT_MODEL=llama3.1:8b

# OpenAI (Optional - only needed if AI_PROVIDER=openai)
OPENAI_API_KEY=your-openai-api-key

# OAuth (Google)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_CALLBACK_URL=http://localhost:3001/api/auth/google/callback
