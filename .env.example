# Database
POSTGRES_USER=dynasty_user
POSTGRES_PASSWORD=dynasty_pass
POSTGRES_DB=dynasty_tracker
POSTGRES_PORT=5432

# Backend
NODE_ENV=development
BACKEND_PORT=3001
JWT_SECRET=your-secret-key-change-in-production
SESSION_SECRET=your-session-secret-change-in-production

# Frontend
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:3001

# AWS (for Textract OCR)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# OpenAI (for AI-powered OCR post-processing)
OPENAI_API_KEY=your-openai-api-key
USE_AI_OCR=true

# OAuth (Google)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# Invite Code (optional - restricts registration to invited users)
# If not set or empty, registration is open to anyone
# Share this code with friends you want to invite
INVITE_CODE=
